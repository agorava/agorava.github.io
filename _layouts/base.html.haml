!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    %title Agorava Project 
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    
    :css
      body {
        padding-top: 60px;
      }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{site.base_url}/stylesheets/styles.css" }
    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'//html5shim.googlecode.com/svn/trunk/html5.js' }
    %script{ :type=>'text/javascript', :src=>'//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js' }
    %script{ :type=>'text/javascript', :src=>"#{site.base_url}/javascripts/bootstrap-collapse.js" }
    
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          .github-banner
            %a{:href=>'https://github.com/agorava'}
              %img{:style=>'position: absolute; top: 0; right: 0; border: 0;z-index: 900;', :src=>'https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png', :alt=>'Fork me on GitHub'}
          %a.btn.btn-navbar{"data-toggle"=>"collapse", "data-target"=>".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{ :href=>"#{site.base_url}" } Agorava
          .nav-collapse
            %ul.nav
              %li
                %a{ :href=>"#{site.base_url}/" } Home
              %li
                %a{ :href=>"#{site.base_url}/news/" } Blog
              %li
                %a{ :href=>"#{site.base_url}/calendar/" } Calendar
              %li
                %a{ :href=>"#{site.base_url}/sponsors/" } Sponsors
                
      :javascript
        var indexOfSharp = window.location.pathname.indexOf('#');
        var pathname = indexOfSharp > 0 ? window.location.pathname.substring(0, indexOfSharp) : window.location.pathname;
        var selector = "body > .navbar > .navbar-inner a[href='#{site.base_url}"+pathname+"']";
        $(selector).closest("li").addClass("active");
    
    .container
      ~ content
      %hr
      %footer
        %p &copy; Agorava #{Date.today.year}

    = google_analytics_async
    